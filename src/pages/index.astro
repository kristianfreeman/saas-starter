---
import BaseLayout from '@/layouts/BaseLayout.astro';
import NavigationWrapper from '@/components/navigation-wrapper.astro';
import { Footer } from '@/components/footer';
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Check } from 'lucide-react';
import { subscriptionPlans, formatPrice } from '@/lib/stripe/plans';

const features = [
  {
    title: 'Modern Stack',
    description: 'Built with Astro, React, TypeScript, and Tailwind CSS for the best developer experience.',
  },
  {
    title: 'Authentication Ready',
    description: 'Secure authentication system with Better Auth and Supabase integration.',
  },
  {
    title: 'Database Included',
    description: 'PostgreSQL database with type-safe queries using Supabase.',
  },
  {
    title: 'Payment Processing',
    description: 'Stripe integration for subscriptions and one-time payments.',
  },
  {
    title: 'Email System',
    description: 'Transactional emails with Resend and beautiful templates.',
  },
  {
    title: 'Production Ready',
    description: 'Optimized for performance with monitoring and error tracking.',
  },
];

---

<BaseLayout title="SaaS Starter - Modern SaaS Template">
  <NavigationWrapper />
  
  <main>
    <!-- Hero Section -->
    <section className="relative overflow-hidden py-20 sm:py-32">
      <div className="container">
        <div className="mx-auto max-w-2xl text-center">
          <h1 className="text-4xl font-bold tracking-tight sm:text-6xl">
            Build your SaaS
            <span className="text-primary"> faster than ever</span>
          </h1>
          <p className="mt-6 text-lg leading-8 text-muted-foreground">
            A modern, production-ready SaaS starter template with authentication, 
            payments, and everything you need to launch quickly.
          </p>
          <div className="mt-10 flex items-center justify-center gap-x-6">
            <Button size="lg" asChild>
              <a href="/auth/register">Get Started</a>
            </Button>
            <Button variant="outline" size="lg" asChild>
              <a href="/docs">View Documentation</a>
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section className="py-20 sm:py-32">
      <div className="container">
        <div className="mx-auto max-w-2xl text-center">
          <h2 className="text-3xl font-bold tracking-tight sm:text-4xl">
            Everything you need to launch
          </h2>
          <p className="mt-4 text-lg text-muted-foreground">
            Stop reinventing the wheel. Focus on your unique features.
          </p>
        </div>
        <div className="mx-auto mt-16 grid max-w-5xl grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {features.map((feature) => (
            <Card>
              <CardHeader>
                <CardTitle>{feature.title}</CardTitle>
              </CardHeader>
              <CardContent>
                <CardDescription>{feature.description}</CardDescription>
              </CardContent>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Pricing Section -->
    <section className="py-20 sm:py-32 bg-muted/50">
      <div className="container">
        <div className="mx-auto max-w-2xl text-center">
          <h2 className="text-3xl font-bold tracking-tight sm:text-4xl">
            Simple, transparent pricing
          </h2>
          <p className="mt-4 text-lg text-muted-foreground">
            Choose the plan that fits your needs. Always flexible to scale.
          </p>
        </div>
        <div className="mx-auto mt-16 grid max-w-5xl grid-cols-1 gap-8 lg:grid-cols-3">
          {subscriptionPlans.map((plan) => (
            <Card className={plan.popular ? 'border-primary' : ''}>
              <CardHeader>
                <CardTitle>{plan.name}</CardTitle>
                <CardDescription>{plan.description}</CardDescription>
              </CardHeader>
              <CardContent className="space-y-6">
                <div>
                  <span className="text-4xl font-bold">{formatPrice(plan.price)}</span>
                  <span className="text-muted-foreground">/{plan.interval}</span>
                </div>
                <ul className="space-y-2">
                  {plan.features.map((feature) => (
                    <li className="flex items-center gap-2">
                      <Check className="h-4 w-4 text-primary" />
                      <span className="text-sm">{feature}</span>
                    </li>
                  ))}
                </ul>
                <Button 
                  className="w-full" 
                  variant={plan.popular ? 'default' : 'outline'}
                  asChild
                >
                  <a href="/auth/register">Get Started</a>
                </Button>
              </CardContent>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section className="py-20 sm:py-32">
      <div className="container">
        <div className="mx-auto max-w-2xl text-center">
          <h2 className="text-3xl font-bold tracking-tight sm:text-4xl">
            Ready to get started?
          </h2>
          <p className="mt-4 text-lg text-muted-foreground">
            Join thousands of developers building their SaaS with our template.
          </p>
          <div className="mt-10 flex items-center justify-center gap-x-6">
            <Button size="lg" asChild>
              <a href="/auth/register">Start Building Today</a>
            </Button>
            <Button variant="ghost" size="lg" asChild>
              <a href="/contact">Contact Sales</a>
            </Button>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
